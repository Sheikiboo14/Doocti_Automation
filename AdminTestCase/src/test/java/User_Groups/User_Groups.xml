<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="User Groups Module Testing">
	
	<test name="User Groups Creation">
		<classes>
			<class name="User_Groups.User_Groups">
				<methods>
					<include name="Create_UserGroup"></include>
				</methods>
			</class>
		</classes>
	</test>
		
	<test name="User Groups Updation">
		<classes>
			<class name="User_Groups.Update_UserGroups">
				<methods>
					<include name="Update_UserGroupName"></include>
					<include name="Update_Permission"></include>
				</methods>
			</class>
		</classes>
	</test>
		
	<test name="User Groups Deletion">
		<classes>
			<class name="User_Groups.Delete_UserGroups">
				<methods>
					<include name="Delete_UserGroups"></include>
				</methods>
			</class>
		</classes>
	</test>
</suite>